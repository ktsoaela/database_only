{
  "name": "database-only",
  "version": "1.0.0",
  "description": "Professional SQL Editor with multi-database support - Your free alternative to JetBrains DataGrip",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "backend": "python backend/app.py",
    "frontend": "electron .",
    "combined": "concurrently \"python backend/app.py\" \"wait-on http://localhost:5001 && electron .\"",
    "test": "jest",
    "lint": "eslint .",
    "pack": "electron-builder",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "electron",
    "sql",
    "database",
    "mysql",
    "postgresql",
    "sqlite",
    "mssql",
    "sql-editor",
    "database-management"
  ],
  "author": "Khotso Tsoaela",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "monaco-editor": "^0.45.0",
    "mssql": "^10.0.1",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "sql-formatter": "^15.1.2",
    "sqlite3": "^5.1.6"
  },
  "build": {
    "appId": "com.khotso.databaseonly",
    "productName": "DATABASE ONLY",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
